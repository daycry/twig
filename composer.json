{
    "name": "ercobo/twig",
    "description": "twig for Codeigniter 4",
    "keywords":
    [
        "codeigniter", "twig", "templates", "codeigniter4", "html"
    ],
    "homepage": "https://github.com/ercobo/twig",
    "authors":
    [
        {
            "name": "ercobo",
            "homepage": "https://github.com/ercobo",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require":
    {
        "php": ">=7.2",
        "twig/twig": "~3.0.3"
    },
    "require-dev":
    {
        "phpunit/phpunit" : "8.5.*",
        "codeigniter4/framework": "^4.0.2"
    },
    "autoload":
    {
        "psr-4":
        {
            "ercobo\\Twig\\": "src/"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts":
    {
        "test": "vendor/bin/phpunit",
        "post-update-cmd":
        [
            "@composer dump-autoload"
        ]
    }
}
